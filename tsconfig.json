{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": ".",
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "lib": ["ES2018"],
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "examples", "dist"]
}
